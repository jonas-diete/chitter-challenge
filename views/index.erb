<html>
  <head>
    <title>Chitter - Your Peep message board</title>
  </head>
  <body>
    <header>      
      <% if @user_created == 'true' %>
        <div>Sign Up successful!</div>
      <% end %>
      <% if @username == nil %>
        <a href="/login">Login</a>
        <a href="/sign_up">Sign Up</a>
      <% else %>
        <div>You are logged in as <%= @username %>.<div>
        <form method="POST" action="/logout">
          <input type="submit" value="Log out">
        </form>
      <% end %>
    </header>
    <h1>Chitter</h1>

    <% if @username != nil %>
      <div>
        <form method="POST" action="/new_peep">
          <input type="text" name="content" placeholder="New Peep" multiline="true">
          <input type="submit" value="Post">
        </form>
      </div>
      <% end %>

    <% @peeps.each do |peep| %>
      <div>
        <div><%= peep.username %> <%= peep.time_posted %></div>
        <div><%= peep.content %></div>
      </div>
    <% end %>
  </body>
</html>